# Other apps requirements
eval "$(zoxide init --cmd cd bash)"

# Bash custom options
bind 'set completion-ignore-case on'
bind TAB:menu-complete
shopt -s globstar

# Prompt color customization
c1=$((RANDOM % 6 + 1))
c2=$((RANDOM % 6 + 1))
PS1="\[\e[1;3${c1}m\]\u@\h:\[\e[3${c2}m\]\w\[\e[m\]\n > "

# Personal scripts added to PATH
if [[ ":$PATH:" != *":$HOME/Scripts:"* ]]; then
    export PATH="$HOME/Scripts:$PATH"
fi

# Personal aliases
alias plsh='plass show'
alias p='plass show'
alias ex='exit'
alias q='exit'
alias cl='clear'
alias bat='batcat'
alias b='bat'
alias l='tag ls'
alias d='tag la'
alias ll='eza --long --hyperlink'
alias exa='exa --oneline --hyperlink --total-size --long --no-permissions --no-user --no-time'
alias gitok='echo $GHTOK | xclip -selection clipboard'
alias ffn='ff --new-window'
alias zenn='zen --new-window'
alias clip='xclip -selection clipboard'
alias t='tmux'
alias vc='v ~/.config/nvim/init.vim'
alias src='source ~/.bashami'
alias dotenv='source _dotenv'
alias bashami='v ~/.bashami'

# Personal functions

# Neovim opening
v() {
    if [ $# -ge 1 ]; then
        nvim $@
    else
        nvim .
    fi
}

# SSH keys
ssh-load() {
    eval $(ssh-agent -s)
    echo "$1" > /tmp/tmp_ssh_key
    chmod 600 /tmp/tmp_ssh_key
    ssh-add /tmp/tmp_ssh_key
    rm /tmp/tmp_ssh_key
}

# Folder tree
lt() {
    if [ $# -ge 1 ]; then
        if [ -d "$1" ]; then
            eza --hyperlink --long --no-permissions --no-user --no-time --tree "$@"
        elif [[ "$1" =~ ^[0-9]+$ ]]; then
            eza --hyperlink --long --no-permissions --no-user --no-time --tree -L "$1"
        fi
    else
        eza --hyperlink --long --no-permissions --no-user --no-time --tree
    fi
}

# Fast copy
fcp() {
    cp "$1" $(${@:2} && pwd)
}

# Fast move
fmv() {
    mv "$1" $(${@:2} && pwd)
}

# Folder navigation
nav() {
    shopt -s nocaseglob
    for arg in "$@"; do
        for dir in ./"$arg"*; do
            if [ -d "$dir" ]; then
                cd "$dir"
                break
            fi
        done
    done
}

# Home
export HM=~

hm() {
    cd $HM
    nav "$@"
}

# Desktop
export DK=~/Desktop

dk() {
    cd $DK
    nav "$@"
}

# Documents
export DC=~/Documents

dc() {
    cd $DC
    nav "$@"
}

# Downloads
export DW=~/Downloads

dw() {
    cd $DW
    nav "$@"
}

# Pictures
export PC=~/Pictures

pc() {
    cd $PC
    nav "$@"
}

# Repos
export RP=~/Repos

rp() {
    cd $RP
    nav "$@"
}

# Scripts
export SC=~/Scripts

sc() {
    cd $SC
    nav "$@"
}

# Studies
export ST=~/Studies

st() {
    cd $ST
    nav "$@"
}

# Open in zen
zen() {
    nohup ~/.local/zen.app/zen >/dev/null 2>/dev/null "$@" &
}

# Open in firefox
ff() {
    nohup firefox >/dev/null 2>/dev/null "$@" &
}

# Open in text editor
te() {
    nohup gnome-text-editor >/dev/null 2>/dev/null "$@" &
}

# Open in image viewer
iv() {
    nohup eog >/dev/null 2>/dev/null "$@" &
}

# Open in file explorer
xp() {
    if [ $# -eq 0 ]; then
        nohup nautilus >/dev/null 2>/dev/null "$(pwd)" &
    else
        nohup nautilus >/dev/null 2>/dev/null "$@" &
    fi
}

# Launch program detached and independent
ind() {
    nohup "$@" >/dev/null 2>/dev/null &
}
